
    <div class="middle-box text-center loginscreen   animated fadeInDown">
      <div>
        <div>
          <%= image_tag "H-RecycleLogo.jpg", data: {u: 'image'} %>
        </div>
        <h3>Register to HN+</h3>
        <p>Create an account to get started</p>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, :class =>'form-control', :placeholder => "Name", :required=> ""%>
          </div>
          <div class="form-group">
            <%= f.email_field :email, :class =>'form-control', :placeholder => "Email", :required=> ""%>
          </div>
          <div class="form-group">
            <%= f.password_field :password, :class =>'form-control', :placeholder => "Password", :required=> ""%>
          </div>
          <%= f.submit "Register", class: "btn btn-primary block full-width m-b" %>
          <p class="text-muted text-center"><small>Already have an account?</small></p>
          <a class="btn btn-sm btn-white btn-block" href="login.html">Login</a>
        <% end %>
        <p class="m-t"> <small>H-Recycle | Clean up Houston &copy; 2015</small> </p>
      </div>
    </div>
