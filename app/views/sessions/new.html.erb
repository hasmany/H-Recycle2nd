
    <div class="gray-bg">
      <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
          <div>
            <img src="img/H-RecycleLogo.jpg">
          </div>
          <h3>Welcome to H-Recycle</h3>
          <p>Recycling is an important step in keeping Houston clean</p>
          <p>Log in to keep track.</p>
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">

              <%= f.email_field :email, :class =>'form-control', :placeholder => "Username", :required=> ""%>
            </div>
            <div class="form-group">

              <%= f.password_field :password, :class =>'form-control', :placeholder => "Password", :required=> ""%>
            </div>
            <%= f.submit "Login", class: "btn btn-primary block full-width m-b" %>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="signup.html">Create an account</a>
          <%end%>
          <p class="m-t"> <small>H-Recycle | Clean up Houston &copy; 2015</small> </p>
        </div>
      </div>
    </div>
